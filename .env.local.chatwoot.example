# Chatwoot Configuration for Form-to-Chat Integration
# Copy this file to .env.local and fill in your actual values

# Chatwoot Instance Configuration
# Your Chatwoot instance URL (without trailing slash)
CHATWOOT_BASE_URL=https://chat.nextnest.sg

# API Access Token
# Get this from Chatwoot: Settings > Profile Settings > Access Token
CHATWOOT_API_TOKEN=api_xxxxxxxxxxxxx

# Account ID
# Get this from Chatwoot URL: app.chatwoot.com/app/accounts/[ACCOUNT_ID]
CHATWOOT_ACCOUNT_ID=1

# Inbox ID
# Get this from Chatwoot: Settings > Inboxes > Select your inbox > URL contains inbox ID
CHATWOOT_INBOX_ID=1

# Inbox Identifier (Website Token)
# Get this from Chatwoot: Settings > Inboxes > Your Website Inbox > Settings > Configuration > Inbox Identifier
# This is the token used to identify your inbox for the web widget
CHATWOOT_WEBSITE_TOKEN=xxxxxxxxxxxxx

# Fallback Contact Information
# Used when Chatwoot is unavailable
CHAT_FALLBACK_PHONE=+6591234567
CHAT_FALLBACK_EMAIL=broker@nextnest.sg

# Optional: Circuit Breaker Configuration
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# Optional: Feature Flags
ENABLE_CHAT_TRANSITION=true
ENABLE_AI_BROKER=true