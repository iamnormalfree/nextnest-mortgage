          }
        ]
      },
      "effectiveness_metrics": {
        "description": "How to measure if these formats are working",
        "kpis": [
          {
            "metric": "Production incidents",
            "target": "< 2 per month",
            "format": "post-incident-learning"
          },
          {
            "metric": "Breaking changes",
            "target": "0 unplanned",
            "format": "architecture-review"
          },
          {
            "metric": "Security vulnerabilities",
            "target": "0 critical, < 3 high",
            "format": "security-compliance-review"
          },
          {
            "metric": "AI response quality",
            "target": "> 85% satisfaction",
            "format": "ai-optimization-lab"
          },
          {
            "metric": "Deployment success rate",
            "target": "> 95%",
            "format": "devops-deployment-readiness"
          },
          {
            "metric": "Technical debt ratio",
            "target": "< 20%",
            "format": "technical-debt-tribunal"
          },
          {
            "metric": "User conversion rate",
            "target": "> 15%",
            "format": "ux-consistency-workshop"
          },
          {
            "metric": "Data pipeline uptime",
            "target": "> 99.5%",
            "format": "data-pipeline-reliability"
          }
        ]
      },
      "antiPatterns": {
        "description": "What NOT to do in roundtables",
        "avoid": [
          "Meeting without clear agenda",
          "No assigned action items",
          "Same person always facilitating",
          "Skipping due to 'too busy'",
          "Not tracking decisions made",
          "Allowing scope creep in meetings",
          "Problem-solving in standups",
          "Blame-focused incident reviews",
          "Ignoring technical debt",
          "Not measuring effectiveness"
        ]
      }
    },
