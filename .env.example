# Environment Variables for NextNest
# Copy this file to .env.local for local development

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Database (Optional - for future use)
# DATABASE_URL=your_database_connection_string

# Email Service (Optional - for contact form)
# EMAIL_SERVICE_API_KEY=your_email_service_key
# SMTP_HOST=your_smtp_host
# SMTP_PORT=587
# SMTP_USER=your_email
# SMTP_PASS=your_password

# Analytics (Optional)
# NEXT_PUBLIC_GA_ID=your_google_analytics_id

# AI SDK Configuration
# OpenAI API Key (get from https://platform.openai.com/api-keys)
# OPENAI_API_KEY=sk-proj-your-key-here

# Anthropic API Key (get from https://console.anthropic.com/)
# Required for Claude model support in multi-model orchestration
# ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# ============================================
# AI Intelligence Feature Flags (Week 5)
# ============================================

# Master switch for full AI intelligence orchestration
# When enabled, routes through AI Orchestrator for intent classification,
# state management, and multi-model response generation
ENABLE_FULL_AI_INTELLIGENCE=false

# Individual AI feature flags (controlled via code defaults)
# These are set in lib/utils/feature-flags.ts
# AI_ENABLEINTENTCLASSIFICATION=true
# AI_ENABLECALCULATIONEXPLANATIONS=true
# AI_ENABLEMULTIMODELORCHESTRATION=true
# AI_ENABLECONVERSATIONSUMMARIZATION=false

# Railway Production Variables
# These will be set in Railway dashboard
# NODE_ENV=production
# PORT=3000
